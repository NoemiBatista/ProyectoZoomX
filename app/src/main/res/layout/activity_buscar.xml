<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BuscarActivity">

    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:text="Buscar"

        android:textSize="24sp" />

    <EditText
        android:id="@+id/edNombreSalaABuscar"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese Nombre Sala"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnBuscarSalaPorNombre"
        android:background="@drawable/buttom1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar por Nombre" />

    <EditText
        android:id="@+id/edResponsableABuscar"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese Responsable Sala"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnBuscarPorResponsable"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttom1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar por Responsable" />

    <EditText
        android:id="@+id/edFechaABuscar"

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese Fecha Reserva"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnBuscarPorFecha"
        android:background="@drawable/buttom1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar por Fecha" />

    <Button
        android:id="@+id/btnRegresarBuscar"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttom1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regresar" />

    <ListView
        android:id="@+id/tvResultadoBusqueda"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>